<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name ="Numbers" Grid.ColumnSpan="3" FontSize="60"/>
        <Button Click="Button_Division" Grid.Column="3" Content="/" FontSize="60"/>
        <Button Click="seven_Click" Grid.Row="1" Content="7" FontSize="60"/>
        <Button Click="four_Click" Grid.Row="2" Content="4" FontSize="60"/>
        <Button Click="one_Click" Grid.Row="3" Content="1" FontSize="60"/>
        <Button Click="zero_Click" Grid.Row="4" Content="0" FontSize="60"/>
        <Button Click="eight_Click" Grid.Row="1" Grid.Column="1" Content="8" FontSize="60"/>
        <Button Click="nince_Click" Grid.Row="1" Grid.Column="2" Content="9" FontSize="60"/>
        <Button Click="Button_Multiplication" Grid.Row="1" Grid.Column="3" Content="x" FontSize="60"/>
        <Button Click="five_Click" Grid.Row="2" Grid.Column="1" Content="5" FontSize="60"/>
        <Button Click="six_Click" Grid.Row="2" Grid.Column="2" Content="6" FontSize="60"/>
        <Button Click="Button_Subtraction" Grid.Row="2" Grid.Column="3" Content="-" FontSize="60"/>
        <Button Click="two_Click" Grid.Row="3" Grid.Column="1" Content="2" FontSize="60"/>
        <Button Click="three_Click" Grid.Row="3" Grid.Column="2" Content="3" FontSize="60"/>
        <Button Click="Button_Addition" Grid.Row="3" Grid.Column="3" Content="+" FontSize="60"/>
        <Button Click="Button_Clear" Grid.Row="4" Grid.Column="2" Content="C" FontSize="60"/>
        <Button Click="Button_Calculate" Grid.Row="4" Grid.Column="3" Content="=" FontSize="60"/>
    </Grid>
</Window>
